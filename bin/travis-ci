#!/bin/bash

echo ===;
whoami;
echo ===;

PATH=`readlink -f $(which yogi)`;
PATH=${PATH%/*};
echo ---;
pwd;
ls ..;
echo ---;
cp -f ./bin/grover_patch_wrapper.js $PATH/../node_modules/grover/lib/wrapper/wrapper.js;

echo patched grover;
echo ===;

for d in src/*; do
	if [[ ! -d $d/tests ]]; then continue; fi

	pushd $d
	if ! yogi build --no-lint; then exit 1; fi
	if ! yogi test; then exit 1; fi
	popd
done
